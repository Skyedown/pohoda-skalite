# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@pizzapohoda.sk

# Restaurant Contact Information
# Note: VITE_ prefix is required by Vite to expose variables to the browser
# The backend API (Node.js) can also read these VITE_ prefixed variables
# This way we maintain a single source of truth for contact information
VITE_RESTAURANT_EMAIL=objednavky@pizzapohoda.sk
VITE_RESTAURANT_PHONE=+421 918 175 571

# API Server Port (optional, defaults to 3001)
PORT=3001

# API URL for frontend to connect to backend
# Development: http://localhost:3001
# Production: Set to your deployed API URL (e.g., https://pizzapohoda.sk or https://your-server-ip:3001)
VITE_API_URL=http://localhost:3001

# Password Protection
VITE_SITE_PROTECTION_ENABLED=true
VITE_SITE_PASSWORD=Lenajemantak1

# Operating Hours (24-hour format HH:mm)
VITE_PREORDER_START_TIME=10:00
VITE_OPENING_TIME=11:00
VITE_LAST_ORDER_TIME=21:30
VITE_CLOSING_TIME=22:00

# Order Management
# Set to 'true' to temporarily disable orders due to overload
VITE_ORDERS_OVERLOAD=false
